#########################################################################################################################################################################
#procedury

source /opt/NeteXt73/procedury

aktualizacja(){
#sprawdzanie wersji dla testing
if [ -e ~/.netext73/netext_testing ] && [ "$(cat ~/.netext73/netext_testing | grep 'http')" != "" ]; then
      netext_twoj=$(cat /opt/NeteXt73/procedury | grep wersja | head -n 1 | sed 's/=/ /' 	| sed 's/wersja //')
      twoj_netext=$(curl "$polozenie_skryptu/testing" 	| sed 's/wersja=//')

      if [ "$twoj_netext" != "$netext_twoj" ] && [ "$twoj_netext" != "" ]; then
	      notify-send -i $ikona_info1 "$TEXT_UWAGA" "$TEXT_WERSJA $twoj_netext"
      fi   
fi

#przełącznik http/thhps
if [ -e ~/.netext73/https_link ]; then
      echo "ok" > /dev/null
else
      if [ "$(cat /opt/NeteXt73/procedury | grep https.*dl)" != "" ]; then
	  echo "TRUE" > ~/.netext73/https_link
      else
	  echo "FALSE" > ~/.netext73/https_link
      fi
fi
#odpalanie strony domowej 
if [ -e ~/.netext73/strona_domowa ]; then
echo "ok" > /dev/null
else
    xdg-open "http://www.netext73.pl/p/netext73-poczatek.html"
    echo "TRUE" > ~/.netext73/strona_domowa
fi
}


#########################################################################################################################################################################

if [ -e /root/.gtkrc* ]; then
    echo "ok" > /dev/null
else
    cp ~/.gtkrc* /tmp/
fi
if [ -e /tmp/userek ]; then
    echo "ok" > /dev/null
else
    echo $USER > /tmp/userek
fi
aktualizacja &
if [ -e /tmp/stan_netext ] && [ $(cat /tmp/stan_netext) = "root" ]; then
    yad-netext --center --icons --class="NeteXt'73" --name="NeteXt'73" --window-icon="/opt/NeteXt73/ikony/netext.png" --image="/opt/NeteXt73/ikony/netext73.png" --image-on-top --item-width="190" --read-dir="/opt/NeteXt73/desktopfiles" --width="830" --height="690" --title="- $nazwa_skryptu -" --button="$TEXT_BUG:4" --button="$TEXT_CHANGELOG:3" --button="$TEXT_LICENCJA:2" --button="$TEXT_ZAMKNIJ:1" --single-click
    klawisz=$?
else
    yad-netext --center --icons --class="NeteXt'73" --name="NeteXt'73" --window-icon="/opt/NeteXt73/ikony/netext.png" --image="/opt/NeteXt73/ikony/netext73.png" --image-on-top --item-width="190" --read-dir="/opt/NeteXt73/desktopfiles" --width="830" --height="690" --title="- $nazwa_skryptu -" --button="Root:5" --button="$TEXT_BUG:4" --button="$TEXT_CHANGELOG:3" --button="$TEXT_LICENCJA:2" --button="$TEXT_ZAMKNIJ:1" --single-click
    klawisz=$?
fi

if [ "$klawisz" = "2" ]; then
      yad-netext --center --title="$nazwa_skryptu" --window-icon="/opt/NeteXt73/ikony/logi.png" --text-info --filename=/opt/NeteXt73/LICENSE --width=600 --height=600 --button="gtk-ok:1" 
      cd /opt/NeteXt73 && ./NeteXt73
elif [ "$klawisz" = "3" ]; then
      yad-netext --center --title="$nazwa_skryptu" --window-icon="/opt/NeteXt73/ikony/logi.png" --text-info --filename=/opt/NeteXt73/changelog --width=800 --height=600 --button="gtk-ok:1"
      cd /opt/NeteXt73 && ./NeteXt73
elif [ "$klawisz" = "4" ]; then
      if [ "$USER" = "root" ]; then
	    userek=$(cat /tmp/userek)
	    su $userek -c "xdg-open \"http://netext73.pl/2014/02/netext73-zgaszanie-bedow.html\""
      else
	    xdg-open "http://netext73.pl/2014/02/netext73-zgaszanie-bedow.html"
      fi
      cd /opt/NeteXt73 && ./NeteXt73
elif [ "$klawisz" = "5" ]; then
      cd /opt/NeteXt73 && ./NeteXt73_root
fi

if [ $USER = "root" ] && [ -e /home/root ]; then
    sudo rm -rf /home/root
fi