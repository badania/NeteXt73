#		   | \ | | ___| |_ ___\ \/ / |_( )___  |___ /
#		   |  \| |/ _ \ __/ _ \\  /| __|/   / /  |_ \
#		   | |\  |  __/ |_  __//  \| |_    / /  ___) |
#		   |_| \_|\___|\__\___/_/\_\\__|  /_/  |____/
#
#	            __ _ _ __ __ _ / _(_) ___ _____ __  _   _
#	           / _` | '__/ _` | |_| |/ __|_  / '_ \| | | |
#	          | (_| | | | (_| |  _| | (__ / /| | | | |_| |
#	           \__, |_|  \__,_|_| |_|\___/___|_| |_|\__, |
#	           |___/                                |___/
#     _           _        _       _                   _                        _ _
#    (_)_ __  ___| |_ __ _| | __ _| |_ ___  _ __      | | _____ _ __ _ __   ___| (_)
#    | | '_ \/ __| __/ _` | |/ _` | __/ _ \| '__|     | |/ / _ \ '__| '_ \ / _ \ | |
#    | | | | \__ \ |_ (_| | | (_| | |_ (_) | |        |   <  __/ |  | | | |  __/ | |
#    |_|_| |_|___/\__\__,_|_|\__,_|\__\___/|_|        |_|\_\___|_|  |_| |_|\___|_|_|
#        __  __  _     _____   _____      ___     _   _      _   ____  _ _  _____ ____
#   ___  \ \/ / | |_  |___  | |___ /     ( _ )   | \ | | ___| |_| __ )(_) |____  |___ /
#  / _ \  \  /  | __|    / /    |_ \     / _ \/\ |  \| |/ _ \ __|  _ \| | __| / /  |_ \
# |  __/  /  \  | |_    / /    ___) |   | (_>  < | |\  |  __/ |_| |_) | | |_ / /  ___) |
#  \___| /_/\_\  \__|  /_/    |____/     \___/\/ |_| \_|\___|\__|____/|_|\__/_/  |____/
#
#########################################################################################################################################################################
#procedury

source /opt/NeteXt73/procedury

#########################################################################################################################################################################
$monitor

cd /tmp
if [ -e ~/.netext73/monitor ]; then
    if [ "$(cat ~/.netext73/monitor | grep system)" != "" ]; then
	a1=TRUE
    else
	a1=FALSE
    fi
    if [ "$(cat ~/.netext73/monitor | grep powertop)" != "" ]; then
	a2=TRUE
    else
	a2=FALSE
    fi
    if [ "$(cat ~/.netext73/monitor | grep HTOP)" != "" ]; then
	a3=TRUE
    else
	a3=FALSE
    fi
    if [ "$(cat ~/.netext73/monitor | grep saidar)" != "" ]; then
	a4=TRUE
    else
	a4=FALSE
    fi
    if [ "$(cat ~/.netext73/monitor | grep battery)" != "" ]; then
	a5=TRUE
    else
	a5=FALSE
    fi
else

    a1=TRUE
    a2=FALSE
    a3=FALSE
    a4=FALSE
    a5=FALSE
fi

konfiguracja=$(yad-netext --window-icon="/opt/NeteXt73/ikony/monitor.png" --title="$nazwa_skryptu" --text="<span color=\"$kolor_textu\">$TEXT_MONITOR1</span>" --column="$TEXT_ZAZNACZ" --column="program" --width="355" --height="230" --checklist --list \
"$a1" "system monitor" \
"$a2" "powertop" \
"$a3" "HTOP" \
"$a4" "saidar" \
"$a5" "battery" \
--button="gtk-ok:0" --button="$TEXT_POWROT:1" )
klawisz=$?
if [ "$klawisz" = "0" ]; then
    if [ "$klawisz" = "0" ]; then
	echo $konfiguracja > ~/.netext73/monitor
    fi
    if [ "$(echo $konfiguracja | grep system)" != "" ]; then
	    xterm -T 'System monitor' -e bash -c "watch -t 'uptime; echo '';echo 'Scaling governor:';cat /sys/devices/system/cpu/cpu0/cpufreq/scaling_governor; echo ''; echo 'CPU Freq:'; cat /proc/cpuinfo | grep MHz; echo ''; echo 'Memory:'; free -m; echo ''; sensors'" &
    fi
    if [ "$(echo $konfiguracja | grep powertop)" != "" ]; then
	    xterm -T powertop -e bash -c "which powertop 1> /dev/null || echo '$TEXT_INST1'; which powertop 1> /dev/null || sudo apt-get install powertop -y; sudo powertop" &
    fi
    if [ "$(echo $konfiguracja | grep HTOP)" != "" ]; then
	    xterm -T HTop -e bash -c "which htop 1> /dev/null || echo '$TEXT_INST1'; which htop 1> /dev/null || sudo apt-get install htop -y; htop" &
    fi
    if [ "$(echo $konfiguracja | grep saidar)" != "" ]; then
	    xterm -T saidar -e bash -c "which saidar 1> /dev/null || echo '$TEXT_INST1'; which saidar 1> /dev/null || sudo apt-get install saidar -y; saidar -c" &
    fi
        if [ "$(echo $konfiguracja | grep battery)" != "" ]; then
	    stan_baterii
    fi
fi
