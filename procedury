wersja=0.7.09

jezyczek(){

#teksty w języku polskim
if [ -e ~/.netext73 ]; then
    echo "nic nie robię bo jest" 1 > /dev/null
else
    mkdir ~/.netext73
fi
if [ -e ~/.netext73/jezyk ] && [ "$(cat ~/.netext73/jezyk)" = "niemiecki" ]; then
    export jezyk="angielski"
    echo 'angielski' >  ~/.netext73/jezyk
fi
if [ -e ~/.netext73/jezyk ]; then
    export jezyk=$(cat ~/.netext73/jezyk)
else
    if [ "$(echo $LANG | grep pl)" != "" ]; then
	    export jezyk="polski"
	    echo 'polski' >  ~/.netext73/jezyk
#    elif [ "$(echo $LANG | grep de)" != "" ]; then
#	    export jezyk="niemiecki"
#	    echo 'niemiecki' >  ~/.netext73/jezyk
    elif [ "$(echo $LANG | grep fr)" != "" ]; then
	    export jezyk="francuski"
	    echo 'francuski' >  ~/.netext73/jezyk
    else
	    export jezyk="angielski"
	    echo 'angielski' >  ~/.netext73/jezyk
    fi
fi

}

source /opt/NeteXt73/tlumaczenia/angielski
jezyczek; case $jezyk in de*)
    source /opt/NeteXt73/tlumaczenia/niemiecki
;;
fr*)
    source /opt/NeteXt73/tlumaczenia/francuski
;;
pol*)
    source /opt/NeteXt73/tlumaczenia/polski
;;
esac

export nazwa_skryptu="NeteXt'73 v$wersja - $TEXT_NETEXT2"
export nazwa_skryptu1="NeteXt'73 v$wersja"
#1 conservative-conservative
#2 ondemand-ondemand
#3 intel-performance
#4 intel-powersave
#5 performance-conservative
#6 performance-ondemand
export wersja_apm1="advanced_power_management_by_ext73_conservative-conservative"
export wersja_apm2="advanced_power_management_by_ext73_ondemand-ondemand"
export wersja_apm3="advanced_power_management_by_ext73_intel-performance"
export wersja_apm4="advanced_power_management_by_ext73_intel-powersave"
export wersja_apm5="advanced_power_management_by_ext73_performance-conservative"
export wersja_apm6="advanced_power_management_by_ext73_performance-ondemand"
export error1="dialog-error"
export ikona_info1="dialog-information"
export warning1="dialog-warning"
export adres_opisu="http://www.netext73.pl/search/label/opis_netext73"
if [ -e ~/.netext73/https_link ] && [ "$(cat ~/.netext73/https_link)" = "FALSE" ]; then
export adres_glowny="http://dl.dropbox.com/u/72313101"
export adres_skryptow="$adres_glowny/skrypty"
export adres_firmware="$adres_glowny/linux-firmware"
export adres_sterownikow="$adres_glowny/sterowniki2"
export polozenie_skryptu="http://dl.dropboxusercontent.com/u/2552069/ext73"
else
export adres_glowny="https://dl.dropbox.com/u/72313101"
export adres_skryptow="$adres_glowny/skrypty"
export adres_firmware="$adres_glowny/linux-firmware"
export adres_sterownikow="$adres_glowny/sterowniki2"
export polozenie_skryptu="https://dl.dropboxusercontent.com/u/2552069/ext73"
fi

#kolor textu
if [ -e ~/.netext73/kolor_textu ]; then
      kolor_textu=$(cat ~/.netext73/kolor_textu)
else
      kolor_textu="blue"
fi
if [ "$(cat /proc/cpuinfo | grep Intel)" != "" ]; then
	     export komputerek="INTEL"
elif [ "$(cat /proc/cpuinfo | grep AMD)" != "" ]; then
	     export komputerek="AMD"
fi
if [ "$(uname -m)" = "x86_64" ]; then
    bit="64bit"
    bit2="amd64"
else 
    bit="32bit"
    bit2="i386"
fi
if [ -e ~/Pobrane ]; then
  export download="/home/$USER/Pobrane"
else
  export download="/home/$USER/Downloads"
fi

if [ $USER = "root" ]; then
     export download="/root"
fi
if [ -e $download ]; then
  echo "nic nie robię bo jest" 1 > /dev/null
else
  mkdir -p $download
fi

#########################################################################################################################################################################
#procedury

#pasek postępu pobierania dla dużych plików
pobieranie(){
sed -u "$TEXT_POB1" | yad-netext --center --width=610 --progress --title="$TEXT_POB2 $a $MB" --auto-close --auto-kill --window-icon="/opt/NeteXt73/ikony/download.png" --button="$TEXT_POWROT:1"
}

#pasek postępu pobierania pulsujący gdy coś długo trwa
pobieranie2(){
yad-netext --center --width=560 --title="$nazwa_skryptu" --text="$TEXT_POBIERANIE" --progress --pulsate --auto-close --auto-kill --window-icon="/opt/NeteXt73/ikony/download.png" --button="$TEXT_POWROT:1"
}

#ubijanie wget jak się zawiesi yad-netext
kill_wget(){
dziala=0
while [ $dziala -eq 0 ]
do
  if [ -z "$(pidof yad-netext)" ]; then
      pkill wget
      dziala=1
  fi
done
}

#pobieranie plików do instalacji kerneli
pobieranie_kerneli(){
if [ "$kern" = "ppa mainline" ];then
	wget $strona/$a 2>&1    | pobieranie 
	zamknij_program
	dziala=0; MB1=$(echo "scale=2;$(wget --server-response --spider $strona/$a/$(grep "href=" ./$a | cut -d '"' -f 8 | grep "all" | grep "linux-headers") 2>&1 | grep "ontent.*ength" | awk '{print $2}')/1024/1024"|bc); MB="- $MB1 MB"
	wget $strona/$a/$(grep "href=" ./$a | cut -d '"' -f 8 | grep "all" | grep "linux-headers")      2>&1 | pobieranie 
	zamknij_program
	dziala=0; MB1=$(echo "scale=2;$(wget --server-response --spider $strona/$a/$(grep "href=" ./$a | cut -d '"' -f 8 | grep $bit2 | grep "linux-headers") 2>&1 | grep ength | awk '{print $2}')/1024/1024"|bc); MB="- $MB1 MB"
	wget $strona/$a/$(grep "href=" ./$a | cut -d '"' -f 8 | grep $bit2 | grep "linux-headers")      2>&1 | pobieranie 
	zamknij_program
	dziala=0; MB1=$(echo "scale=2;$(wget --server-response --spider $strona/$a/$(grep "href=" ./$a | cut -d '"' -f 8 | grep $bit2 | grep "linux-image") 2>&1   | grep ength | awk '{print $2}')/1024/1024"|bc); MB="- $MB1 MB"
	wget $strona/$a/$(grep "href=" ./$a | cut -d '"' -f 8 | grep $bit2 | grep "linux-image")        2>&1 | pobieranie 
	zamknij_program
	if [ "$WERSJA_DISTRO" != "saucy" ]; then
		dziala=0; MB1=$(echo "scale=2;$(wget --server-response --spider $strona/$a/$(grep "href=" ./$a | cut -d '"' -f 8 | grep $bit2 | grep "linux-image-extra") 2>&1 | grep ength | awk '{print $2}')/1024/1024"|bc); MB="- $MB1 MB"
		wget $strona/$a/$(grep "href=" ./$a | cut -d '"' -f 8 | grep $bit2 | grep "linux-image-extra")  2>&1 | pobieranie  
		zamknij_program
	fi
else

#pobieranie kerneli e X t 7 3
	wget $strona/$a/1.txt 2>&1 | pobieranie 
	zamknij_program
	dziala=0; MB1=$(echo "scale=2;$(wget --server-response --spider $strona/$a/$(grep "href=" ./index.html   | cut -d '"' -f 2 | grep  $rodzaj | grep $bit2 | grep "linux-headers") 2>&1 | grep "ontent.*ength" | awk '{print $2}')/1024/1024"|bc); MB="- $MB1 MB"
	wget $strona/$a/$(grep "href=" ./index.html   | cut -d '"' -f 2 | grep  $rodzaj | grep $bit2 | grep "linux-headers") 2>&1 | pobieranie 
	zamknij_program
	dziala=0; MB1=$(echo "scale=2;$(wget --server-response --spider $strona/$a/$(grep "href=" ./index.html   | cut -d '"' -f 2 | grep  $rodzaj | grep $bit2 | grep "linux-image") 2>&1 | grep "ontent.*ength" | awk '{print $2}')/1024/1024"|bc); MB="- $MB1 MB"
	wget $strona/$a/$(grep "href=" ./index.html   | cut -d '"' -f 2 | grep  $rodzaj | grep $bit2 | grep "linux-image")   2>&1 | pobieranie  
	zamknij_program
fi
rm ./index.html -f
}

wersja(){
notify-send -i "preferences-other" "$nazwa_skryptu" "$TEXT_INFO1"
}

naglowek(){
echo '#!/bin/bash'
}

naglowek2(){
echo "echo \"$TEXT_PROCEDURA_1\""
echo "sudo sed -i 's+^start on mounted MOUNTPOINT=/proc TYPE=proc+start on mounted MOUNTPOINT=/var+' /etc/init/mounted-proc.conf"
echo "sudo sed -i 's+^start on starting mountall+start on mounted MOUNTPOINT=/var+' /etc/init/ureadahead.conf"
echo "/usr/bin/yes | sudo dpkg -i linux-headers* linux-image*"
echo "sudo update-initramfs -u -k \$(ls linux-head* | sed 's/linux-headers-//g' | sed 's/_.*//g')"
echo "if [ -e ~/.netext73/archiwum_deb ] && [ \"\$(cat ~/.netext73/archiwum_deb)\" = \"TRUE\" ]; then"
#echo "if [ \"\$(ls *.deb | grep 'i7')\" = \"\" ] && [ \"\$(ls *.deb | grep 'brazos')\" = \"\" ]; then"
echo "sudo cp *.deb /var/cache/apt/archives/ -f"
#echo "fi"
echo "fi"
echo "echo 'tak' > /tmp/ok.txt"
}

microcode_firmware(){
#nonfree
if [ "$(dpkg -l | grep linux-firmware-nonfree | grep ii )" = "" ]; then
      yad-netext --center --question --title="$nazwa_skryptu" --window-icon="/opt/NeteXt73/ikony/pytanie.png" --image="/opt/NeteXt73/ikony/pytanie.png" --button="gtk-ok:0" --button="$TEXT_POWROT:1" --text="$TEXT_PROCEDURA_4"
      if [ $? = 0 ]; then
	    echo "tak" > /tmp/ok.txt
      else
	    echo "nie" > /tmp/ok.txt
      fi
else
      echo "nie" > /tmp/ok.txt
fi
rm *.*deb -f
inst="tak"
if [ "$(dpkg -l | grep linux-firmware | head -n 1 | awk '{print $3}')" != "$wersja_firmware" ]; then
    a="linux-firmware_"$wersja_firmware"_all.deb"
    dziala=0; MB1=$(echo "scale=2;$(wget --server-response --spider $adres_firmware/$a 2>&1 | grep "ontent.*ength" | awk '{print $2}')/1024/1024"|bc); MB="- $MB1 MB"
    wget $adres_firmware/$a 2>&1 | pobieranie  
    zamknij_program
    rm 1.txt; wget $adres_firmware/1.txt 2>&1 | pobieranie  
    if [ "$(grep $(md5sum linux-firmware*) 1.txt)" != "" ]; then
	  inst="tak"
    else
	  yad-netext --center --error --title="$nazwa_skryptu"  --window-icon="/opt/NeteXt73/ikony/error.png" --image="/opt/NeteXt73/ikony/error.png" --button="gtk-ok:0" --title="$nazwa_skryptu"  --text="$TEXT_SUMA_KONTROLNA"
	  rm 1.txt -f
	  rm *.deb -f
	  inst="nie"
    fi
fi
if [ "$inst" = "tak" ]; then
  instalacja
  rm *.html -f
  rm 1.txt -f
fi
}

microcode_inst(){
echo "echo \"$TEXT_PROCEDURA_2\""
echo "if [ -e linux-firmware* ]; then"
echo "/usr/bin/yes | sudo dpkg -i linux-firmware*"
echo "fi"
echo "if [ \"\$(cat /tmp/ok.txt)\" = \"tak\" ]; then"
echo "sudo apt-get install linux-firmware-nonfree -y"
echo "fi"
echo "if [ \"\$(cat /proc/cpuinfo | grep Intel)\" != \"\" ]; then sudo apt-get install intel-microcode -y"
echo "if [ \"\$(lsb_release -c | awk '{print \$2}' | grep 'precise' )\" != \"\" ]; then"
echo "sudo /usr/sbin/update-intel-microcode && sudo microcode_ctl -u"
echo "fi"
echo "fi"
echo "rm *.*deb -f"

}

microcode_usun(){
echo "echo \"$TEXT_PROCEDURA_3\""
echo "/usr/bin/yes | sudo dpkg -r linux-firmware-nonfree"
echo "if [ \"\$(cat /proc/cpuinfo | grep Intel)\" != \"\" ]; then sudo apt-get purge intel-microcode -y; fi"
echo "sudo rm /lib/firmware/amd-ucode -r"
echo "sudo apt-get autoremove -y"
}


apm_inst(){
echo "echo \"$TEXT_PROCEDURA_6\""
echo "sudo rm -fr /etc/pm/power.d/* /usr/lib/pm-utils/power.d/readahead /usr/lib/pm-utils/power.d/journal-commit"
echo "if [ -e /usr/lib/pm-utils/power.d/wireless ];then"
echo "echo 'ok' > /dev/null"
echo "else"
echo "wget $adres_skryptow/wireless"
echo "sudo mv wireless /usr/lib/pm-utils/power.d/"
echo "fi"
echo "echo 'ok' > /dev/null"
echo "if [ -e /usr/lib/pm-utils/power.d/laptop-mode ];then"
echo "echo 'ok' > /dev/null"
echo "else"
echo "wget $adres_skryptow/laptop-mode"
echo "sudo mv laptop-mode /usr/lib/pm-utils/power.d/"
echo "fi"
echo "sudo sh -c 'echo \"options rts5139 ss_en=0\" > /etc/modprobe.d/rts5139.conf'"
echo "sudo sh -c 'echo \"options ums_realtek ss_en=0\" > /etc/modprobe.d/ums-realtek.conf'"
echo "sudo chmod a-x /usr/lib/pm-utils/power.d/*"
wget $adres_skryptow/apm2/advanced_power_management_by_ext73_$wersja_apm.tar.gz 2>&1 | pobieranie  
echo "tar -xvzf advanced_power_management_by_ext73_$wersja_apm.tar.gz"
echo "sudo mv $wersja_apm1*$wersja_apm $wersja_apm2*$wersja_apm $wersja_apm3*$wersja_apm $wersja_apm4*$wersja_apm $wersja_apm5*$wersja_apm $wersja_apm6*$wersja_apm /etc/pm/power.d/"
echo "sudo mv readahead /usr/lib/pm-utils/power.d/"
echo "rm *tar.gz"
echo "sudo chmod a-x /etc/pm/power.d/*"

echo "if [ \"\$(cat ~/.netext73/apm_status | grep 'conservative-conservative')\" != \"\" ] ; then "
echo "sudo chmod a+x /etc/pm/power.d/$wersja_apm1*$wersja_apm /usr/lib/pm-utils/power.d/readahead"

echo "elif [ \"\$(cat ~/.netext73/apm_status | grep 'ondemand-ondemand')\" != \"\" ] ; then "
echo "sudo chmod a+x /etc/pm/power.d/$wersja_apm2*$wersja_apm /usr/lib/pm-utils/power.d/readahead"

echo "elif [ \"\$(cat ~/.netext73/apm_status | grep 'intel-performance')\" != \"\" ] ; then "
echo "sudo chmod a+x /etc/pm/power.d/$wersja_apm3*$wersja_apm /usr/lib/pm-utils/power.d/readahead"

echo "elif [ \"\$(cat ~/.netext73/apm_status | grep 'intel-powersave')\" != \"\" ] ; then "
echo "sudo chmod a+x /etc/pm/power.d/$wersja_apm4*$wersja_apm /usr/lib/pm-utils/power.d/readahead"

echo "elif [ \"\$(cat ~/.netext73/apm_status | grep 'performance-conservative')\" != \"\" ] ; then "
echo "sudo chmod a+x /etc/pm/power.d/$wersja_apm5*$wersja_apm /usr/lib/pm-utils/power.d/readahead"

echo "elif [ \"\$(cat ~/.netext73/apm_status | grep 'performance-ondemand')\" != \"\" ] ; then "
echo "sudo chmod a+x /etc/pm/power.d/$wersja_apm6*$wersja_apm /usr/lib/pm-utils/power.d/readahead"
echo "else"
echo "sudo chmod a+x /etc/pm/power.d/$wersja_apm1*$wersja_apm /usr/lib/pm-utils/power.d/readahead"
echo "fi"
echo "sudo chmod a+x /usr/lib/pm-utils/power.d/xfs_buffer /usr/lib/pm-utils/power.d/anacron /usr/lib/pm-utils/power.d/disable_wol /usr/lib/pm-utils/power.d/readahead"
echo "sudo chown root:root /usr/lib/pm-utils/power.d/*"
echo "sudo chown root:root /etc/pm/power.d/*"
echo "sudo apt-get install ethtool"
echo "sudo /etc/init.d/ondemand stop"
echo "sudo update-rc.d -f ondemand remove"
echo "ls /etc/pm/power.d/ -Fl | grep '*' | awk '{print $9}' | sed 's/*//' | sed 's/advanced_power_management_by_ext73_//' | sed 's/_v.*//' > ~/.netext73/apm_status"
#naprawa powerbtn
echo "if [ \"\$(uname -m)\" = \"x86_64\" ]; then "
echo "if [ \"\$(cat /etc/acpi/powerbtn.sh | grep '/usr/.../qdbus')\" != \"\" ]; then"
echo "sudo cp /etc/acpi/powerbtn.sh /etc/acpi/powerbtn.sh.bak -f"
echo "sudo sed -i 's/\/usr\/...\/qdbus/\/usr\/lib\/x86_64-linux-gnu\/qt4\/bin\/qdbus/' /etc/acpi/powerbtn.sh"
echo "if [ \"\$(cat /etc/acpi/powerbtn.sh | grep '#\/sbin')\" = \"\" ];then"
echo "sudo sed -i '/Power button pressed/ s/\/sbin/#\/sbin/' /etc/acpi/powerbtn.sh"
echo "fi"
echo "fi"
echo "fi"
echo "echo \"$TEXT_MENU_USLUGI31\""
echo "sudo sed -i '/apm_status_fix/d' /etc/rc.local"
echo "sudo sed -i '/exit 0/d' /etc/rc.local"
echo "echo 'bash /opt/NeteXt73/menu/apm_status_fix' | sudo tee -a /etc/rc.local"
echo "echo 'exit 0' | sudo tee -a /etc/rc.local" 
}

#1 conservative-conservative
#2 ondemand-ondemand
#3 intel-performance
#4 intel-powersave
#5 performance-conservative
#6 performance-ondemand

apm_zmiana(){
echo "echo \"$TEXT_PROCEDURA_8_1 $1\""
echo "sudo chmod a-x /etc/pm/power.d/*"
echo "sudo chmod a+x /etc/pm/power.d/$2 /usr/lib/pm-utils/power.d/readahead"
echo "sudo chown root:root /etc/pm/power.d/* /usr/lib/pm-utils/power.d/readahead"
echo "ls /etc/pm/power.d/ -Fl | grep '*' | awk '{print $9}' | sed 's/*//' | sed 's/advanced_power_management_by_ext73_//' | sed 's/_v.*//' > ~/.netext73/apm_status"

echo "if [ \"\$wififix\" = \"FALSE\" ];then"
echo "for i in \$(ls /etc/pm/power.d/advanced_power_management_by_ext73_*)"
echo "do"
echo "sudo sed -i '1,/wlan0 power on/ s/power on/power off/' \$i"
echo "sudo sed -i '1,/eth1 power on/ s/power on/power off/' \$i"
echo "done"
echo "else"
echo "for i in \$(ls /etc/pm/power.d/advanced_power_management_by_ext73_*)"
echo "do"
echo "sudo sed -i '1,/wlan0 power off/ s/power off/power on/' \$i"
echo "sudo sed -i '1,/eth1 power off/ s/power off/power on/' \$i"
echo "done"
echo "fi"

echo "if [ \"\$rts5139fix\" = \"TRUE\" ];then"
echo "for i in \$(ls /etc/pm/power.d/advanced_power_management_by_ext73_*)"
echo "do"
echo "sudo sed -i '/sudo rmmod rts5139/ s/sudo rmmod rts5139/sudo modprobe rts5139/' \$i"
echo "sudo sed -i '1,/sudo modprobe rts5139/ s/sudo modprobe rts5139/sudo rmmod rts5139/' \$i"
echo "done"
echo "else"
echo "for i in \$(ls /etc/pm/power.d/advanced_power_management_by_ext73_*)"
echo "do"
echo "sudo sed -i '/sudo modprobe rts5139/ s/sudo modprobe rts5139/sudo rmmod rts5139/' \$i"
echo "done"
echo "fi"

}


apm_usun(){
echo "ls /etc/pm/power.d/ -Fl | grep '*' | awk '{print $9}' | sed 's/*//' | sed 's/advanced_power_management_by_ext73_//' | sed 's/_v.*//' > ~/.netext73/apm_status"
echo "echo \"$TEXT_PROCEDURA_9\""
echo "sudo rm -fr /etc/pm/power.d/advanced_power_management_by_ext73* /usr/lib/pm-utils/power.d/readahead"
echo "if [ -e /usr/lib/pm-utils/power.d/laptop-mode ];then"
echo "echo 'ok' > /dev/null"
echo "else"
echo "wget $adres_skryptow/wireless"
echo "sudo mv wireless /usr/lib/pm-utils/power.d/"
echo "fi"
echo "echo 'ok' > /dev/null"
echo "if [ -e /usr/lib/pm-utils/power.d/wireless ];then"
echo "echo 'ok' > /dev/null"
echo "else"
echo "wget $adres_skryptow/laptop-mode"
echo "sudo mv laptop-mode /usr/lib/pm-utils/power.d/"
echo "fi"
echo "sudo chmod a+x /usr/lib/pm-utils/power.d/*"
echo "sudo chown root:root /usr/lib/pm-utils/power.d/*" 
#przywrócenie powerbtn
echo "if [ -e /etc/acpi/powerbtn.sh.bak ]; then"
echo "sudo mv /etc/acpi/powerbtn.sh.bak /etc/acpi/powerbtn.sh -f"
echo "sudo chmod a+x /etc/acpi/powerbtn.sh"
echo "sudo chown root:root /etc/acpi/powerbtn.sh"
echo "sudo rm /etc/modprobe.d/rts5139.conf -f"
echo "sudo rm /etc/modprobe.d/ums-realtek.conf -f"
echo "fi"
echo "sudo update-rc.d -f ondemand defaults"
echo "sudo /etc/init.d/ondemand start"
echo "sudo sed -i '/apm_status_fix/d' /etc/rc.local"
}

stan_apm(){
stan_apm=""
wget $adres_skryptow/APM2/index.html -O apm.txt  2>&1 | pobieranie2 
export wersja_apm=$(cat apm.txt | grep "href=.*advanced" | cut -d '"' -f 2 | cut -d '_' -f 6 | head -n 1 | sed 's/.tar.gz//')
if [ "$(ls /etc/pm/power.d/ | wc | awk '{print $1}')" != "6" ]; then
      stan_apm="-"
else
      if [ -e /etc/pm/power.d/$wersja_apm1*$wersja_apm ]; then
	    stan_apm=$(ls /etc/pm/power.d/ -Fl | grep '*' | awk '{print $9}' | sed 's/*//' | sed 's/advanced_power_management_by_ext73_//' | sed 's/_v.*//')
      else
	    stan_apm="-"
      fi
fi
if [ -e /etc/modprobe.d/rts5139.conf ] && [ -e /etc/modprobe.d/ums-realtek.conf ]; then
      echo 'ok' > /dev/null
else
      stan_apm="-"
fi
if [ "$(ls /etc/pm/power.d/ | wc | awk '{print $1}')" = "6" ] && [ $( ls /usr/lib/pm-utils/power.d/ -la | grep rwxr | wc | awk '{print $1}') != "6" ]; then 
	    stan_apm="-"
fi
if [ "$(grep apm_status_fix /etc/rc.local)" = "" ]; then
	    stan_apm="-"
fi
}

